                    "bar": {
                        ".": {}
                    }
                }
            }
        },
        "expect_visit": [
            {
                "path": "",
                "node": {
                    "map": null
                },
                "matched": false
            },
            {
                "path": "foo",
                "node": {
                    "bool": true
                },
                "matched": true
            },
            {
                "path": "bar",
                "node": {
                    "bool": false
                },
                "matched": true
            }
